    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // 1. HERO SLIDER
            const hero = document.getElementById('home');
            const sliderImages = [
                'assets/images/hero-2060239.jpg', // Wedding (Initial)
                'https://images.unsplash.com/photo-1530103862676-de8c9debad1d?auto=format&fit=crop&w=1500', // Birthday
                'https://images.unsplash.com/photo-1511578314322-379afb476865?auto=format&fit=crop&w=1500'  // Corporate
            ];
            let currentIdx = 0;

            function rotateBackground() {
                currentIdx = (currentIdx + 1) % sliderImages.length;
                hero.style.backgroundImage = `url('${sliderImages[currentIdx]}')`;
            }
            setInterval(rotateBackground, 5000); // 5 seconds interval

            // 2. PRELOADER
            const pre = document.getElementById('preloader');
            setTimeout(()=> pre.classList.add('loaded'), 500);

            // 3. REVEAL ON SCROLL
            const reveals = document.querySelectorAll('.reveal');
            const observer = new IntersectionObserver((entries)=>{
                entries.forEach(e => { if(e.isIntersecting) e.target.classList.add('in-view'); });
            }, {threshold: 0.1});
            reveals.forEach(r => observer.observe(r));

            // 4. NAV TOGGLE
            document.querySelector('.nav-toggle').addEventListener('click', () => {
                document.querySelector('.nav-links').classList.toggle('open');
            });
        });
    </script>
